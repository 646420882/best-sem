<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataPullJobBean" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject">
            <bean class="com.perfect.schedule.task.execute.ReportDataPull"/>
        </property>
        <property name="targetMethod">
            <value>pullStart</value>
        </property>

    </bean>
    <bean id="dataPullTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="dataPullJobBean"/>
        <property name="cronExpression" value="0 30 0 */1 * ? "/>
    </bean>

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="autoStartup" value="true"/>
        <property name="triggers">
            <list>
                <ref bean="dataPullTrigger"/>
            </list>
        </property>
    </bean>
</beans>