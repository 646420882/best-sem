<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="jobBoostrap" class="com.perfect.commons.JobBoostrap" init-method="start"/>

    <bean name="requestHelper" class="com.perfect.api.baidu.RequestHelper">
        <property name="semaphoreValue" value="1"/>
    </bean>


    <bean name="accountThreadTaskExecutors" class="com.perfect.commons.AccountThreadTaskExecutors">
        <property name="threadNamePrefix" value="bidding-thread-"/>
        <property name="corePoolSize" value="8"/>
    </bean>
</beans>