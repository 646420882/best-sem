<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <!--<file>-->
            <!--<source>src/main/resources/*.xml</source>-->
            <!--<outputDirectory>/conf</outputDirectory>-->
            <!--<filtered>true</filtered>-->
        <!--</file>-->

        <file>
            <source>src/main/resources/log4j.properties</source>
            <outputDirectory>/conf</outputDirectory>
            <filtered>true</filtered>
        </file>

        <file>
            <source>src/main/resources/run.sh</source>
            <outputDirectory>/</outputDirectory>
            <fileMode>0755</fileMode>
            <filtered>true</filtered>
        </file>
    </files>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
        </dependencySet>
    </dependencySets>

    <moduleSets>
        <moduleSet>
            <binaries>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>